<html>
    <head>
        <title>ADD REPLY</title>
    </head>
    <body>
    <h3><a href="/workPosts">Go To Work Post List......</a></h3>
        <ul>
            <% users.forEach(function(user){ %>
                <li><%= user._id%></li>
            <% })%>
        </ul>
        <ul>
        <% replies.forEach(function(reply) { %>
            <li><%= reply._writer.nick %> <%= reply._writer.profilePhoto %>
            <%= reply.content %> <%= reply.createAt %> </li>
        <% })%>
            <form method="POST" action="/posts/<%= postId %>/comments">
                writer : <input type="text" name="writer" value="563ef1cb401ae00c19a1583a"><br>
                content : <input type="text" name="content" autofocus><br>
                <button type="submit">댓글 달기</button>
            </form>
        </ul>
    </body>
</html>